<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/activity_mmon" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="0dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="50dp">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#023cd0" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="मॉनिटर\10" android:textAlignment="center"/>
            <TextView android:textSize="18sp" android:textColor="#000000" android:id="@+id/textView3" android:layout_width="match_parent" android:layout_height="match_parent" android:text="      मॉनिटर हे एक महत्वाचे आउटपुट उपकरण आहे. मॉनिटरचा उपयोग माहिती प्रदर्शित करण्यासाठी होतो. मॉनिटरच्या स्क्रीनवरील आउटपुटला सॉफ्टकॉपी असे म्हणतात. कारण मॉनिटरवरील प्रदर्शित होणारी माहिती ही आपण फक्त पाहू शकतो, प्रत्यक्षात हाताळू शकत नाही.\10"/>
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="      मॉनिटरचे सामान्यतः प्रकार पुढीलप्रमाणे आहेत.\10"/>
            <TextView android:textSize="18sp" android:textColor="#000000" android:layout_width="match_parent" android:layout_height="match_parent" android:text="      CRT(कॅथोड रे ट्यूब) मॉनिटर:-\10"/>
            <ImageView android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="150dp" android:src="@drawable/crt"/>
            <TextView android:textSize="18sp" android:textColor="#000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="      CRT(कॅथोड रे ट्यूब) मॉनिटर हे आधीच्या काळात वापरले जात असत. हे जुन्या टी. व्ही. च्या आकाराचे मॉनिटर होते. या मॉनिटर्स ना जागा जास्त लागते. तसेच इतर मॉनिटरच्या तुलनेत वीजही जास्त लागते.\10"/>
            <TextView android:textSize="18sp" android:textColor="#000000" android:layout_width="match_parent" android:layout_height="match_parent" android:text="      LCD (लिक्विड क्रिस्टल डिस्प्ले)मॉनिटर:-\10"/>
            <ImageView android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="150dp" android:src="@drawable/computer"/>
            <TextView android:textSize="18sp" android:textColor="#000000" android:layout_width="match_parent" android:layout_height="match_parent" android:text="      एल.सी.डी. मॉनिटर म्हणजेच (लिक्विड क्रिस्टल डिस्प्ले)मॉनिटर. हे मॉनिटर CRT मॉनिटरपेक्षा अधिक चांगले मॉनिटर असतात. व या मॉनिटर्स ना वीजही CRT मॉनिटरच्या तुलनेत कमी लागते. हे मॉनिटर्स कमी जागा व्यापतात. त्यामुळे वापरण्यास सोयीस्कर असतात.\10"/>
            <TextView android:textSize="18sp" android:textColor="#000000" android:layout_width="match_parent" android:layout_height="match_parent" android:text="      LED(लाइट-एमिटिंग डायोड) मॉनिटर:-\10"/>
            <ImageView android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="150dp" android:src="@drawable/led"/>
            <TextView android:textSize="18sp" android:textColor="#000000" android:layout_width="match_parent" android:layout_height="match_parent" android:text="      LED(लाइट-एमिटिंग डायोड) मॉनिटर हे चापट्या आकाराचे मॉनिटर असतात. आजच्या काळात हे मॉनिटर्स जास्त प्रमाणात वापरले जातात. तसेच अन्य मॉनिटरपेक्षा जास्त उर्जेची बचत करतात.\10"/>
        </LinearLayout>
    </ScrollView>
    <com.google.android.gms.ads.AdView android:id="@+id/adView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" app:adSize="BANNER" app:adUnitId="ca-app-pub-2393065895339578/1243970239"/>
