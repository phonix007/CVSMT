<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/activity_mkeys" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="0dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="50dp">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#023cd0" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="किबोर्ड" android:textAlignment="center"/>
            <ImageView android:layout_gravity="center" android:layout_width="250dp" android:layout_height="150dp" android:src="@drawable/keyboard"/>
            <TextView android:textSize="18sp" android:textColor="#000000" android:id="@+id/textView3" android:layout_width="match_parent" android:layout_height="match_parent" android:text="      किबोर्ड हे एक महत्वाचे इनपुट उपकरण आहे. किबोर्डचा उपयोग कंप्युटरमध्ये माहिती टाईप करण्या साठी होतो.\10"/>
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#023cd0" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="किबोर्ड वरील बटणे (Keyboard Buttons):-\10"/>
            <TextView android:textSize="18sp" android:textColor="#000000" android:layout_width="match_parent" android:layout_height="match_parent" android:text="      1. एन्टर बटण(Enter Key):- एन्टर बटणाचा उपयोग टाइप करताना खालील ओळीत जाण्यासाठी होतो.\10"/>
            <TextView android:textSize="18sp" android:textColor="#000000" android:layout_width="match_parent" android:layout_height="match_parent" android:text="      2. कॅप्स लॉक (Caps Lock):-  कंप्युटरमध्ये माहिती टाइप करताना अक्षरे कॅपिटल व स्मॉल लिपीत टाइप करण्यासाठी कॅप्स लॉक बटणाचा उपयोग होतो.\10"/>
            <TextView android:textSize="18sp" android:textColor="#000000" android:layout_width="match_parent" android:layout_height="match_parent" android:text="      3. नम लॉक (Num Lock):- टाइप करताना अंकाचा वापर करण्यासाठी नम लॉक बटण ऑन करावे लागते.\10"/>
            <TextView android:textSize="18sp" android:textColor="#000000" android:layout_width="match_parent" android:layout_height="match_parent" android:text="      4. स्पेस बटण (Space Button):- टाइप करताना दोन अक्षरात जागा सोडण्यासाठी स्पेस बटण वापरले जाते.\10"/>
            <TextView android:textSize="18sp" android:textColor="#000000" android:layout_width="match_parent" android:layout_height="match_parent" android:text="      5. बॅक स्पेस (Back Space):- टाइप केलेले अक्षर खोडण्यासाठी बॅक स्पेस बटण वापरले जाते.\10"/>
            <TextView android:textSize="18sp" android:textColor="#000000" android:layout_width="match_parent" android:layout_height="match_parent" android:text="      6. शिफ्ट बटण (Shift Button):- कीबोर्डच्या बटणांवरील वरील बाजूचे अक्षर टाइप करण्यासाठी शिफ्ट बटण वापरले जाते.\10"/>
            <TextView android:textSize="18sp" android:textColor="#000000" android:layout_width="match_parent" android:layout_height="match_parent" android:text="      7. नेव्हिगेशन बटणे-(Navigation Key)- टाइप करताना कर्सरची जागा बदलण्यासाठी नेव्हिगेशन बटणांचा वापर होतो.\10"/>
            <TextView android:textSize="18sp" android:textColor="#000000" android:layout_width="match_parent" android:layout_height="match_parent" android:text="      8. डिलीट बटण (Delete Button):- टाइप करताना उजवीकडील अक्षरे खोडण्यासाठी डिलीट बटणाचा वापर होतो. किंवा सिलेक्ट केलेले घटक डिलीट करण्यासाठी डिलीट बटणाचा वापर होतो.\10"/>
            <ImageView android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="220dp" android:src="@drawable/keybutton"/>
        </LinearLayout>
    </ScrollView>
    <com.google.android.gms.ads.AdView android:id="@+id/adView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" app:adSize="BANNER" app:adUnitId="ca-app-pub-2393065895339578/1243970239"/>
</RelativeLayout>
